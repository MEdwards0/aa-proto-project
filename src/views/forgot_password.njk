{% extends "govuk/template.njk" %}
  {% block head %}
<!--[if !IE 8]><!-->
    <link rel="stylesheet" type="text/css" href="/styles/main.css">
{% endblock %}
{% block content %}
  <h1 class="govuk-heading-xl">Reset Password</h1>
<form id='loginForm' class="govuk-label--l" action='reset-password' method="POST">
<h1 class="govuk-heading-l">Staff Email</h1>
  <input class="govuk-input govuk-input--width-20" id='user_email'type="text" name="email" placeholder="" required="required">
</br>
</br>
<button class="govuk-button" data-module="govuk-button" id="email_submit" type="submit">Submit</button>
</form>

{% endblock %}
{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
  <script src="styles/all.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}

