<h2>Processing for claimant {{page.nino}}</h2>

{% from "govuk/components/radios/macro.njk" import govukRadios %}

<div class="govuk-form-group" id='start-new-claim-radios'>
  <fieldset class="govuk-fieldset">
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
      <h1 class="govuk-fieldset__heading">
        Would you like to begin a new claim process?
      </h1>
    </legend>
    <div id="new-claim-hint" class="govuk-hint">
        This will begin a new claimant process.
    </div>
    <div class="govuk-radios" data-module="govuk-radios">
      <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="new-claim-1" name="new-claim" type="radio" value="yes">
        <label class="govuk-label govuk-radios__label" for="new-claim">
          Yes
        </label>
        <div id="new-claim-yes-hint" class="govuk-hint">
            This will begin a new claim.
        </div>
      </div>
      <div class="govuk-radios__item">
        <input class="govuk-radios__input" id="new-claim-2" name="new-claim" type="radio" value="no">
        <label class="govuk-label govuk-radios__label" for="new-claim">
          No
        </label>
        <div id="new-claim-no-hint" class="govuk-hint">
            This will abort the process and take you back to the home page.
        </div>
      </div>
    </div>

  </fieldset>
</div>

{# {% from "govuk/components/button/macro.njk" import govukButton %} #}

<div id='radio-next-button'>
    <button class="govuk-button" data-module="govuk-button" id='start-claim'>
         Next
    </button>
</div>


